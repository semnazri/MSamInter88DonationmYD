<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/abuabu</item>
        <item name="colorPrimaryDark">@color/abuabu</item>
        <item name="colorAccent">@color/abuabu</item>
    </style>

    <style name="MyOwntheme" parent="MyOwntheme.Base"></style>

    <style name="MyOwntheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/abuabu</item>
        <item name="colorPrimaryDark">@color/abuabu</item>
        <!--<item name="colorControlNormal">@color/black22</item>-->
        <!--<item name="colorControlActivated">@color/black22</item>-->
        <!--<item name="colorControlHighlight">@color/black22</item>-->

    </style>

    <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/yellow_header_nav</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.Design.Tab</item>
        <item name="tabSelectedTextColor">@color/yellow_header_nav</item>
    </style>

</resources>
